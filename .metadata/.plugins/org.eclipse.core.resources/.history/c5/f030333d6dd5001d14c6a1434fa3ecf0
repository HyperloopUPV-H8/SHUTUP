#pragma once

#include "stm32h7xx_hal.h"
#include <vector>

using namespace std;

class AnalogOut{
private:
	TIM_HandleTypeDef* timer;
	uint32_t channel;
	GPIO_TypeDef* port;
	uint16_t pin;

	double max_voltage;
	double current_voltage = 0.0;

public:
	static vector<AnalogOut*> all_analog_outs;

	AnalogOut(double max_voltage,TIM_HandleTypeDef* timer, uint32_t channel, GPIO_TypeDef* port, uint16_t pin);
	void set_voltage(double current_voltage);
	void start();
	void stop();
	static void start_all_analog_outs();
};
