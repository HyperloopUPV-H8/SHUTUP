#pragma once

#include <vector>

using namespace std;

enum STATE{
	FREE,
	OCCUPIED
};


class StreamMessage{
public:
	vector<size_t> size;
	vector<void*> ptrs;

	template<typename Arg1, typename... Rest>
	StreamMessage(Arg1* arg1, T*... args){
		size.push_back(sizeof(Arg1));
		ptrs.push_back(arg1);
		if(sizeof...(args) == 0)
			return;
		else
			StreamMessage(args...);
	}
};

class Stream {
private:
	static vector<Stream> streams;
	vector<StreamMessage> messages;

public:
	State state = FREE;
	uint32_t frequency;

	Stream() {
		Stream::streams.push_back(this);
	}

	void add_data(StreamMessage message, uint32_t frequency){
		messages.push_back(message);
		frequency = frequency;
		state = OCCUPIED;
	}

	template<typename Arg1, typename... Rest>
	static void add_stream(uint16_t frequency, Arg1* arg1, T*... rest) {
		for(auto s : streams){
			if(s.state == FREE || frequency == s.frequency){
				StreamMessage message(arg1, rest...);
			}

		}
	}

};
