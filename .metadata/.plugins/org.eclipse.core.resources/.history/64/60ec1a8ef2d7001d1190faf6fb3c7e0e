#pragma once

#include <vector>

using namespace std;

enum STATE{
	FREE,
	OCCUPIED
};


class Stream {
private:
	static vector<Stream> streams;

	size_t size;
	void* ptr;

public:
	State state = FREE;
	uint32_t frequency;

	Stream() {
		Stream::streams.push_back(this);
	}

	template<typename T>
	static void add_stream(uint16_t frequency, T* data) {
		for(auto s : streams){
			if(s.state == FREE || s.frequency == frequency)
				int a = 0;
		}
	}

};
