#pragma once

#include "stm32h7xx_hal.h"

enum PinMode {
	PIN_MODE_NONE,
	PIN_MODE_AnalogInput,
	PIN_MODE_AnalogOutput,
	PIN_MODE_InputCapture,
	PIN_MODE_DigitalOutput,
	PIN_MODE_DigitalInput
};

class Pin {
public:
	Pin(GPIO_TypeDef* port, uint16_t pin) : port(port), pin(pin) {  }
	GPIO_TypeDef* port;
	uint16_t pin;
	PinMode mode;
};
