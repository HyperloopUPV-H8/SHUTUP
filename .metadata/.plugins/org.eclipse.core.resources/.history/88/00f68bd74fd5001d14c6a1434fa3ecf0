#pragma once

#include <vector>
#include "stm32h7xx_hal.h"

using namespace std;

enum DigitalOutState{
	OPEN,
	CLOSED
};

class DigitalOut {

private:
	DigitalOutState state = CLOSED;
	GPIO_TypeDef* port;
	uint16_t pin;

public:
	static vector<DigitalOut*> all_digital_outs;

	DigitalOut(GPIO_TypeDef* port, uint16_t pin);
	void close();
	void open();

};
