#pragma once

#include <vector>
#include "stm32h7xx_hal.h"

using namespace std;

class DigitalIn {

private:
	GPIO_TypeDef* port;
	uint16_t pin;

public:

	enum DigitalInState {
		HIGH,
		LOW
	};

	static vector<DigitalIn*> all_digital_ins;
	DigitalIn(GPIO_TypeDef* port, uint16_t pin);
	DigitalInState get_value();
};
