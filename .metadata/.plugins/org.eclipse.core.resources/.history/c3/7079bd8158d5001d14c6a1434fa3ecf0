#pragma once

#include <vector>
#include "stm32h7xx_hal.h"

using namespace std;

enum DigitalInState {
	HIGH,
	LOW
};

class DigitalIn {

private:
	GPIO_TypeDef* port;
	uint16_t pin;

public:
	static vector<DigitalIn*> all_digital_ins;
	DigitalIn(GPIO_TypeDef* port, uint16_t pin);
	DigitalInState get_value();
};
