#pragma once

#include <vector>
#include "stm32h7xx_hal.h"

using namespace std;

class DigitalOut {

public:
	enum DigitalOutState {
		HIGH,
		LOW
	};

private:
	DigitalOutState state = DigitalOut::LOW;
	GPIO_TypeDef* port;
	uint16_t pin;

public:
	static vector<DigitalOut*> all_digital_outs;

	DigitalOut(GPIO_TypeDef* port, uint16_t pin);
	void turn_high();
	void turn_low();

};
